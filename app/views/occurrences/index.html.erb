<div class="notice_div col-12">
  <p id="notice"><%= notice %></p>
</div>

<div class="user_logout_wrp col-12">
  <div class="user_logout col-12 col-md-4">
    <span><%="Olá, #{@display_name}, "%>&nbsp</span><%= link_to("Sair", destroy_user_session_path, method: :delete) %>
  </div>
</div>

<div class="user_buttons col-12 col-md-6">
  <div class="menu-item">
    <span class="menu-title">Menu do Usuário</span>
  </div>
  <div class="menu-item btn-menu-div">
    <%= link_to 'Registrar ocorrência', new_occurrence_path, class: 'new col-10 col-md-2' %>
  </div>
  <div class="menu-item btn-menu-div">
    <%= link_to 'Animais perdidos', occurrences_lost_path, class: 'lost col-10 col-md-2' %>
  </div>
  <div class="menu-item btn-menu-div">
    <%= link_to 'Animais encontrados', occurrences_found_path, class: 'found col-10 col-md-2' %>
  </div>
</div>


<style type="text/css">
  .user_logout_wrp{
    height: 10%;
    display: flex;
    justify-content: flex-end;
  }
  .user-logout {
    min-width: 300px;
  }

  .user_buttons {
    height: 60%;
    display: flex;
    align-items: left;
    flex-direction: column;
  }
  .btn-menu-div {
    margin: 20px;
  }
  .btn-menu-div a{
    white-space: nowrap;
    text-align: center;
    display: block;
    max-width: 250px;
    padding: 10px;
    color: #fff;
    background-color: #17a2b8;
    border: 1px solid #17a2b8;
    border-radius: 3px;
    text-decoration: none;
  }
  a.lost {
    background-color: #ba6c43;
    border: 1px solid #ba6c43;
  }
  a.found {
    background-color: #48af84;
    border: 1px solid #48af84;
  }
  .occurrence_wrapper {
    display: flex;
    border: 1px solid #17a2b8;
    border-radius: 3px;
  }

  .occurrence_box{
    max-height: 100px;
    border: 1px solid #17a2b8;
  }

  .menu-title {
    color: #17a2b8;
    font-weight: bold;
    margin: 30px;
  }
</style>
