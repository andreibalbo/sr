<p id="notice"><%= notice %></p>

<h1>Listing Occurrences</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th>Stars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occurrences.each do |occurrence| %>
      <tr>
        <td><%= occurrence.date %></td>
        <td><%= occurrence.location %></td>
        <td><%= occurrence.description %></td>
        <td><%= occurrence.stars %></td>
        <td><%= link_to 'Show', occurrence %></td>
        <td><%= link_to 'Edit', edit_occurrence_path(occurrence) %></td>
        <td><%= link_to 'Destroy', occurrence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

