<div class="container col-md-12">
  <div class="login-box col-md-4">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Senha' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %> Lembrar
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Entrar", class: 'btn btn-info' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style type="text/css">
  .container {
    height: 83vh;
    display: flex;
    align-items: center;
  }
  .login-box {
    margin: auto;
    border: 1px solid #aaa;
    border-radius: 3px;
    padding: 10px 20px;
  }

</style>